<%- include('./header') %>
  <h2>Center Details</h2>
  <div class="center-details">
    <p><strong>Name:</strong> <%= center.name %></p>
    <p><strong>Address:</strong> <%= center.address %></p>
    <p><strong>Created At:</strong> <%= new Date(center.created_at).toLocaleString() %></p>
  </div>
  <div class="actions">
    <a href="/centers/<%= center.id %>/edit" class="btn edit">Edit</a>
    <form action="/centers/<%= center.id %>?_method=DELETE" method="POST" class="delete-form">
      <button type="submit" class="btn delete">Delete</button>
    </form>
    <a href="/centers" class="btn back">Back to List</a>
  </div>
<%- include('./footer') %>